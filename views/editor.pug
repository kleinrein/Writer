include topbar.pug
textarea#editor.bg-check(style=`font-size:${fontsize}px; font-family:${fontfamily}`)
include bottombar.pug

unless theme == 'default'
    if usevideo
        .video-wrapper
            video.video(preload='metadata', loop='', autoplay='', muted='')
                source(src=`video/${theme}.mp4`, type='video/mp4')
    else
        .image-bg(style=`background-image: url(images/${theme}.jpg)`)
