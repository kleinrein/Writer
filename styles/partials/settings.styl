#settings-wrapper
    min-height 100vh
    width 100vw
    position fixed
    overflow hidden
    z-index 100
    background-color desertstorm
    top 0
    left 0
    opacity 0

#settings-topbar
    display flex
    padding 0 25px
    margin 25px 0 0 0

#settings-form
    padding 0 25px
    display flex
    flex-direction row
    .settings
        margin-right 50px
        .setting
            margin-bottom 35px
        span
            text-transform uppercase
            color darkergrey
            font-weight 100
            font-size 18px
        input,
        select
            display block
            margin-top 10px
        select
            font-size 16px
            option
                font-size 20px
        .small
            text-transform none
            margin-top 10px
            display block
            color darkergrey
        .settings-theme-wrapper
            display flex
            flex-direction row
            flex-wrap wrap
            height 70vh
            width 400px
            overflow-y auto
            margin-top 25px
            position relative
            .settings-theme
                margin-right 25px
                text-align center
                .theme-img
                    -webkit-background-size cover
                    width 125px
                    height 125px
                span
                    text-transform none
                    font-size 16px
                    display block

.input-hidden
    position absolute
    left -9999px

// Range
input[type="range"]
    -webkit-appearance none !important
    height 5px
    border-radius 15px
    transition all 300ms ease
    background-color silversand
    border solid 1px normalgrey


input[type="range"]::-webkit-slider-thumb
    -webkit-appearance none !important
    width 15px
    height 15px
    background-color eggwhite
    box-shadow 0px 0px 3px shadylady
    border-radius 10px
    transition all 0.5s ease

input[type="range"]:focus
    outline none

// Select
select
    width 100%
    background-color white
    padding 2px
    color darkergrey
    outline none
    border none

// Theme img
input[type=radio]:checked + label > .theme-img
    border 2px solid eucalyptus

input[type=radio] + label>.theme-img
    border 2px solid transparent
    width 150px
    height 150px
    transition 500ms all

input[type=radio]:checked + label>.theme-img
    opacity 1
