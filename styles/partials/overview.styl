#overview-wrapper
    background-color bgcolor
    min-height 100vh

.overviews
    position relative
    display flex
    flex-direction row
    flex-wrap wrap
    .overview
        display flex
        justify-content center
        align-items center
        width 150px
        height 200px
        border-radius 5px
        color shadylady
        background-color eggwhite
        font-size 50px
        cursor default
        box-shadow inset 0 0 5px 1px rgba(210, 210, 210, 0.5)
        border 1px solid grey
        margin 25px 20px
        -webkit-user-select none
        transition all 200ms ease-in-out
        span
            font-size 6px
            height 100%
            width 100%
            padding 10px
            top 0
            margin-top 30px
    .overview-new-file
        @extend .overviews .overview
        background-color silversand
        &:hover
            background-color asbestos
            color eggwhite
