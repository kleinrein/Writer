.video-wrapper
    position fixed
    top 0
    right 0
    bottom 0;
    left 0
    z-index -1
    min-width 100%
    min-height 100%
    .video
        position absolute
        top 50%
        left 50%
        width auto
        height auto
        -webkit-transform: translateX(-50%) translateY(-50%)
        transform translateX(-50%) translateY(-50%)
        display block
        min-width 100%
        min-height 100%

.image-bg
    -webkit-background-size cover
    background-size cover
    background-position center
    background-repeat no-repeat
    position fixed
    top 0
    right 0
    bvottom 0
    left 0
    z-index -1
    min-width 100%
    min-height 100%
