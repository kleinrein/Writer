// * Writer wrapper *
#writer-wrapper
    margin 0
    position relative
    height 100%

// * Light/Dark text *

.dark
    color eggwhite

.light
    color blackcolor

 // * Scrollbar *
::-webkit-scrollbar
    width 12px

 ::-webkit-scrollbar-track
     -webkit-box-shadow inset 0 0 2px rgba(0,0,0,0.3)
     -webkit-border-radius 10px
     border-radius: 10px

::-webkit-scrollbar-thumb
    -webkit-border-radius 10px
    border-radius 10px
    background lightgrey
    webkit-box-shadow inset 0 0 1px rgba(0,0,0,0.5)
