#overview-wrapper
    background-color bgcolor
    min-height 100vh

.overviews
    position relative
    display flex
    flex-direction row
    flex-wrap wrap
    transition all 500ms ease-in-out
    .overview-doc
        transition all 500ms ease-in-out
        perspective 100px
        .overview
            display flex
            justify-content center
            align-items center
            position relative
            transition all 250ms ease-in-out
            width 150px
            height 200px
            border-radius 5px
            color shadylady
            background-color eggwhite
            font-size 50px
            cursor default
            box-shadow inset 0 0 5px 1px rgba(210, 210, 210, 0.5)
            box-shadow 0 0 5px 1px rgba(210, 210, 210, 0.5)
            border 1px solid normalgrey
            margin 25px 20px 10px 20px
            -webkit-user-select none
            span
                font-size 6px !important
                font-family FiraSans !important
                height 90%
                width 90%
                overflow hidden
                top 0
                z-index 10
                position relative
                white-space pre
            &:hover
                box-shadow 0 0 20px .5px rgba(133, 133, 133, 0.28)
                transform scale(1.01)
        .overview-new-file
            @extend .overviews .overview-doc .overview
            background-color silversand
            &:hover
                background-color asbestos
                color eggwhite
        .overview-filename
            text-align center
            font-size 14px
            color darkergrey
            font-weight 500
            -webkit-user-select none
            cursor default
        .overview-delete
            font-size 20px
            position absolute
            z-index 10
            display flex
            justify-content center
            align-items center
            top 5px
            right 5px
            width 10px
            height 10px
            padding 3px
            border-radius 5px
            transition all 125ms ease-in-out
            background-color eggwhite
            i
                color darkergrey
                display flex
            &:hover
                background-color flatred
                i
                    color eggwhite

.overview-undo-delete
    width 100%
    position fixed
    bottom -50px
    text-align center
    padding 15px
    opacity 0
    button
        border-radius 5px
        border none
        outline none
        padding 5px
        background-color eucalyptus
        color eggwhite
        font-size 14px
